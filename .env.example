# Docker Configuration
EXTERNAL_PORT=3200

# Database
DATABASE_URL="postgresql://fuselink:fuselink_password@localhost:5432/fuselink"
POSTGRES_DB=fuselink
POSTGRES_USER=fuselink
POSTGRES_PASSWORD=fuselink_password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API
API_PORT=3001
API_URL=http://localhost:3001

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3200/api
NEXTAUTH_SECRET=your-nextauth-secret-change-this
NEXTAUTH_URL=http://localhost:3200

# Node Environment
NODE_ENV=development

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_RETENTION_DAYS=28
ANALYTICS_RETENTION_DAYS_PREMIUM=365
